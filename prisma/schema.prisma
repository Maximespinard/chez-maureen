generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// === TABLES MÃ‰TIER ===

model Category {
  id          String            @id @default(cuid())
  name        String
  slug        String            @unique
  order       Int               @default(0)
  products    ProductCategory[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([order])
}

model Product {
  id            String            @id @default(cuid())
  name          String
  slug          String            @unique
  description   String?
  price         Decimal           @db.Decimal(10, 2)
  unit          String            @default("kg")
  origin        String?
  image         String?
  imageKey      String?
  categories    ProductCategory[]
  badges        ProductBadge[]
  isActive      Boolean           @default(true)
  isFeatured    Boolean           @default(false)
  featuredOrder Int?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([isActive])
  @@index([isFeatured, featuredOrder])
}

model ProductCategory {
  productId  String
  categoryId String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  @@id([productId, categoryId])
  @@index([categoryId])
  @@index([productId])
}

model Badge {
  id        String         @id @default(cuid())
  name      String
  slug      String         @unique
  color     String
  order     Int            @default(0)
  products  ProductBadge[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@index([order])
}

model ProductBadge {
  productId String
  badgeId   String
  value     String?
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@id([productId, badgeId])
}

model StoreSettings {
  key       String   @id
  value     Json
  updatedAt DateTime @updatedAt
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

// === BETTER AUTH ===

model User {
  id              String    @id @default(cuid())
  name            String
  email           String    @unique
  emailVerified   Boolean   @default(false)
  image           String?
  username        String?   @unique
  displayUsername String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  sessions        Session[]
  accounts        Account[]
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}